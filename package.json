{
  "displayName": "Homebridge BlueAir Platform",
  "name": "homebridge-blueair-purifier",
  "version": "0.1.1",
  "description": "Homebridge plugin for BlueAir purifiers",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kovapatrik/homebridge-blueair-purifier.git"
  },
  "bugs": {
    "url": "https://github.com/kovapatrik/homebridge-blueair-purifier/issues"
  },
  "engines": {
    "node": "^18.17.0 || ^20.9.0",
    "homebridge": "^1.6.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "wasm-pack": "wasm-pack build --target nodejs --out-name index",
    "build": "rimraf pkg dist && npm run wasm-pack && tsc",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "devDependencies": {
    "@types/node": "^20.12.5",
    "homebridge": "^1.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^1.0.3",
    "homebridge-blueair-platform": "file:./pkg"
  }
}
